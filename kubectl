curl -fsSL "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl" -o /tmp/v3-kubectl && sudo install -o root -g root -m 0755 /tmp/v3-kubectl /usr/local/bin/kubectl && (sudo bash -c 'kubectl completion bash > /etc/bash_completion.d/kubectl') && echo -e '\r\nalias k="kubectl"' >> ~/.bash_aliases